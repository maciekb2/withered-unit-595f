---
import { SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
        &copy; {today.getFullYear()} {SITE_TITLE}. Wszelkie prawa zastrze≈ºone.
</footer>
<style>
        footer {
                position: fixed;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                margin: 0.5em 0;
                padding: 0.5em 1em;
                background: linear-gradient(var(--gray-gradient)) no-repeat;
                color: rgb(var(--gray));
                text-align: center;
                width: fit-content;
        }
	.privacy {
	margin-top: 0.5em;
	}
	.privacy a {
	text-decoration: none;
	color: rgb(var(--gray));
	}
	.privacy a:hover {
	color: rgb(var(--gray-dark));
	text-decoration: underline;
	}
</style>
