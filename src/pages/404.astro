---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="pl">
  <head>
    <BaseHead title="Strona nie istnieje" description="Błąd 404" />
    <style>
      main {
        text-align: center;
        padding: 4em 1em;
      }
      h1 {
        font-size: 4rem;
        margin: 0;
        color: var(--diplomatic-blue);
      }
      p {
        margin: 1em 0;
      }
      .home-button {
        display: inline-block;
        margin-top: 2em;
        padding: 0.75em 1.5em;
        background: var(--diplomatic-blue);
        color: var(--ivory);
        border-radius: 4px;
        text-decoration: none;
        border: 2px solid var(--diplomatic-blue);
      }
      .home-button:hover {
        background: var(--gold-accent);
        color: var(--charcoal);
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>404</h1>
      <p>Ups! Ta strona nie istnieje.</p>
      <p>Za <span id="countdown">10</span> sekund zostaniesz przekierowany na stronę główną.</p>
      <a href="/" class="home-button">Wróć na stronę główną</a>
    </main>
    <Footer />
    <script type="module">
      let seconds = 10;
      const countdown = document.getElementById('countdown');
      const interval = setInterval(() => {
        seconds--;
        if (countdown) countdown.textContent = String(seconds);
        if (seconds <= 0) clearInterval(interval);
      }, 1000);
      setTimeout(() => {
        window.location.href = '/';
      }, 10000);
    </script>
  </body>
</html>
